<h1>Meetings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Address</th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <% if meeting.date >= Date.today %>
        <tr>
          <td><%= link_to meeting.title, meeting %></td>
          <td><%= meeting.date %></td>
          <td><%= meeting.address %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
