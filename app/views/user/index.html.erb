<h1 class="text-center"><%= current_user.name %>'s Profile (<%= current_user.roles.first.name %>)</h1>
<p class="text-center"><%= current_user.email %></p>
<%= render 'user/profile_pic' %>

<div class="text-center">
  <p>
    <div class="btn btn-default">
      <%= link_to 'Edit Profile', edit_user_registration_path %>
    </div>
  </p>
</div>
<% if current_user.has_role?(:teacher) %>
  <%= render 'user/teacher_meetings' %>
<% end %>
<% if current_user.has_role?(:student) %>
<%= render 'user/student_tasks' %>
<%= render 'user/student_meetings' %>
<% end %>
