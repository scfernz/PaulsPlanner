<h1>My Tasks</h1>

<table class="table table-striped">

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task %></td>
        <td>
          <% if !task.completed %>
            <%= form_for task, url: task_mark_complete_path(task), html: { method: :post } do |f| %>
              <%= f.submit 'Complete' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
