<div class="col-sm-12 col-sm-offset-5">

<h1>New Task for Cohort</h1>

<form method="post" action="/tasks/create_for_cohort">

  <div class="field">
    <p>
    <%= label_tag :title %><br>
    <%= text_field_tag :title %>
    </p>
  </div>
  <div class="field">
    <p>
    <%= label_tag :description %><br>
    <%= text_area_tag :description %>
    </p>
  </div>

  <div class="field">
    <p>
    <%= label_tag :cohort_id %><br>
    <select name="cohort_id">
      <%= options_from_collection_for_select(Cohort.all, :id, :name) %>
    </select>
  </p>
  </div>

  <div class="actions">
    <p>
    <%= submit_tag 'Assign Tasks', :class => "btn btn-success"%>
  </p>
  </div>

</form>

<%= link_to 'Task List', tasks_path %>
</div>
