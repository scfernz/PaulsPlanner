<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @meeting.date %>
</p>

<p>
  <strong>Location:</strong>
  <%= @meeting.location %>
</p>

<p>
  <strong>Description:</strong>
  <%= @meeting.description %>
</p>

<!-- TODO: change to display name not email -->
<p>
  <strong>Members:</strong>
  <% @meeting.users.each do |member| %>
  <p><%= member.email %></p>
  <% end %>
</p>

<p>
  <strong>Created by:</strong>
  <%= User.find(@meeting.created_by).email %>
</p>

<%= link_to 'Edit', edit_meeting_path(@meeting) %> |
<%= link_to 'Back', meetings_path %>
