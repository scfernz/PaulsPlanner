<h1>Listing Meetings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Description</th>
      <th>Members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <% if meeting.users.include?(current_user) &&  meeting.date >= Date.today %>
        <tr>
          <td><%= link_to meeting.title, meeting %></td>
          <td><%= meeting.date %></td>
          <td><%= meeting.description %></td>
          <td>
            <table>
              <% meeting.users.each do |member| %>
              <tr><td><%= member.name %></td></tr>
              <% end %>
            </table>
          </td>
          <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
          <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

