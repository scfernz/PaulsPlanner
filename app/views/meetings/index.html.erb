<p id="notice"><%= notice %></p>

<h1>Listing Meetings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Description</th>
      <th>Members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.date %></td>
        <td><%= meeting.location %></td>
        <td><%= meeting.description %></td>
        <td>
          <table>
            <% meeting.users.each do |member| %>
            <tr><td><%= member.email %></td></tr>
            <% end %>
          </table>
        </td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

