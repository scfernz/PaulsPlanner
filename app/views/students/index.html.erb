<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Cohorts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% User.with_role(:student).each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td>
            <% if !user.cohort_id.nil? %>
              <%= Cohort.find(user.cohort_id).name %>
            <% end %>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>
