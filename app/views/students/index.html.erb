<div class="col-sm-8 col-sm-offset-2">
<h1>Listing Students</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Cohorts</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td>
            <% if !user.cohort.nil? %>
              <%= user.cohort.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>
</div>
